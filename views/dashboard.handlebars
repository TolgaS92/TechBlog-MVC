{{#if posts.length}}
{{#each posts as |post|}}
<div class="card dashboard-card">
    <div class="list-item">
        <div class="card-header">
            <span>{{post.title}}</span>
            <span>Posted on {{format_date date_created}}</span>
        </div>
        <div class="card-body content-card">
            {{post.content}}
        </div>
    </div>
</div>
{{/each}}
{{/if}}
<div class="container mt-5">
    <div class="d-flex justify-content-center">
        <a type="button" class="btn btn-dark" href="/dashboard/newpost">+ New Content</a>
    </div>
</div>